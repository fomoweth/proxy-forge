{
	"printWidth": 120,
	"tabWidth": 4,
	"useTabs": true,
	"singleQuote": false,
	"bracketSpacing": false,
	"trailingComma": "all",
	"overrides": [
		{
			"files": "*.sol",
			"options": {
				"printWidth": 120,
				"tabWidth": 4,
				"useTabs": true,
				"singleQuote": false,
				"bracketSpacing": false
			}
		},
		{
			"files": ["*.ts", "*.js", "*.json"],
			"options": {
				"tabWidth": 4,
				"useTabs": true,
				"singleQuote": false
			}
		}
	]
}
